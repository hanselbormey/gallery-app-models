generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime
  authorId  String?
  User      User?    @relation(fields: [authorId], references: [id])
}

model User {
  id       String  @id
  email    String  @unique
  password String?
  picture  String?
  fullname String?
  Post     Post[]
}
